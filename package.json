{
    "name": "minity",
    "displayName": "Minity Language Support",
    "description": "Provide syntax highlighting for Minity",
    "publisher": "minity",
    "version": "1.0.7",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:minity"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "minity",
                "extensions": [
                    ".minity"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "minity",
                "scopeName": "source.minity",
                "path": "./syntaxes/minity.tmLanguage"
            }
        ]
    },
    "dependencies": {
        "@minity/parser": "^1.0.0-alpha.9"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/minity-script/parser.git"
    },
    "icon": "images/minity-icon-large.png"
}
